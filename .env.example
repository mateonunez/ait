# =============================================================================
# AIt Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# Required variables are marked with [REQUIRED]
# =============================================================================

# -----------------------------------------------------------------------------
# General Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# Gateway API server port
APP_PORT=3000

# Enable HTTPS (auto-enabled if certificates exist in packages/gateway/certs/)
USE_HTTPS=false

# Session secret for cookie encryption (change in production!)
SESSION_SECRET=your-session-secret-change-me-in-production

# Additional CORS origins (comma-separated)
# CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Vite development server port (UIt)
VITE_PORT=5173

# -----------------------------------------------------------------------------
# Database Configuration [REQUIRED]
# -----------------------------------------------------------------------------
# PostgreSQL connection URL
POSTGRES_URL=postgresql://root:toor@localhost:5432/ait

# -----------------------------------------------------------------------------
# Redis Configuration [REQUIRED]
# -----------------------------------------------------------------------------
# Redis connection URL (used by scheduler and job queue)
REDIS_URL=redis://:myredissecret@localhost:6379

# -----------------------------------------------------------------------------
# Vector Database Configuration [REQUIRED]
# -----------------------------------------------------------------------------
# Qdrant server URL
QDRANT_URL=http://localhost:6333

# -----------------------------------------------------------------------------
# AI/LLM Configuration [REQUIRED]
# -----------------------------------------------------------------------------
# Ollama server URL
OLLAMA_BASE_URL=http://localhost:11434

# Generation model (default: gemma3:latest)
# Other options: gpt-oss:20b, qwen3:latest, deepseek-r1:latest
GENERATION_MODEL=gemma3:latest

# Embedding model (default: mxbai-embed-large:latest)
# Other options: qwen3-embedding:latest, bge-m3:latest
EMBEDDINGS_MODEL=mxbai-embed-large:latest

# Generation parameters
GENERATION_TEMPERATURE=0.7
GENERATION_TOP_P=0.9

# Embedding parameters
EMBEDDINGS_CHUNK_SIZE=4096
EMBEDDINGS_CHUNK_OVERLAP=200
EMBEDDINGS_CONCURRENCY_LIMIT=4

# Default RAG collection
DEFAULT_RAG_COLLECTION=ait_embeddings_collection

# -----------------------------------------------------------------------------
# Scheduler Configuration
# -----------------------------------------------------------------------------
# Number of concurrent ETL workers
ETL_CONCURRENCY=2

# Batch size for ETL jobs
ETL_BATCH_SIZE=50

# -----------------------------------------------------------------------------
# OAuth Configuration - GitHub
# -----------------------------------------------------------------------------
# Create OAuth App: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
# Optional: Override API endpoint (default: https://api.github.com)
# GITHUB_API_ENDPOINT=https://api.github.com

# -----------------------------------------------------------------------------
# OAuth Configuration - Spotify
# -----------------------------------------------------------------------------
# Create App: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=https://localhost:3000/api/spotify/auth/callback
SPOTIFY_AUTH_URL=https://accounts.spotify.com/authorize
# Optional: Override API endpoint (default: https://api.spotify.com/v1)
# SPOTIFY_API_ENDPOINT=https://api.spotify.com/v1

# -----------------------------------------------------------------------------
# OAuth Configuration - Linear
# -----------------------------------------------------------------------------
# Create OAuth App: https://linear.app/settings/api
LINEAR_CLIENT_ID=your_linear_client_id
LINEAR_CLIENT_SECRET=your_linear_client_secret
# Optional: Override API endpoint (default: https://api.linear.app/graphql)
# LINEAR_API_ENDPOINT=https://api.linear.app/graphql

# -----------------------------------------------------------------------------
# OAuth Configuration - X (Twitter)
# -----------------------------------------------------------------------------
# Create App: https://developer.twitter.com/en/portal/projects-and-apps
X_CLIENT_ID=your_x_client_id
X_CLIENT_SECRET=your_x_client_secret
X_AUTH_URL=https://twitter.com/i/oauth2/authorize
# Optional: Override API endpoint (default: https://api.x.com/2)
# X_API_ENDPOINT=https://api.x.com/2

# -----------------------------------------------------------------------------
# OAuth Configuration - Notion
# -----------------------------------------------------------------------------
# Create Integration: https://www.notion.so/my-integrations
NOTION_CLIENT_ID=your_notion_client_id
NOTION_CLIENT_SECRET=your_notion_client_secret
# Optional: Override API endpoint (default: https://api.notion.com/v1)
# NOTION_API_ENDPOINT=https://api.notion.com/v1

# -----------------------------------------------------------------------------
# OAuth Configuration - Slack
# -----------------------------------------------------------------------------
# Create App: https://api.slack.com/apps
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
# Optional: Override API endpoint (default: https://slack.com/api)
# SLACK_API_ENDPOINT=https://slack.com/api

# -----------------------------------------------------------------------------
# OAuth Configuration - Google
# -----------------------------------------------------------------------------
# Create OAuth credentials: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
# Optional: Override API endpoints
# GOOGLE_CALENDAR_API_ENDPOINT=https://www.googleapis.com/calendar/v3

# -----------------------------------------------------------------------------
# Observability - Langfuse (Optional)
# -----------------------------------------------------------------------------
# Enable LLM observability with Langfuse
# Start Langfuse: docker compose up ait_langfuse_web
LANGFUSE_ENABLED=false
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key
LANGFUSE_BASEURL=http://localhost:3333
