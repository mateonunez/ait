{
  "name": "@ait/gateway",
  "version": "1.0.0",
  "description": "AIt's API Gateway",
  "main": "dist/gateway.server.js",
  "scripts": {
    "dev": "tsx --watch src/gateway.server.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "start": "node dist/src/gateway.server.js",
    "cert:generate": "./scripts/generate-cert.sh",
    "cert:trust": "./scripts/trust-cert.sh",
    "prepare:cert": "pnpm cert:generate && pnpm cert:trust",
    "lint": "biome format && biome lint && biome check",
    "lint:fix": "biome format --write && biome lint --write --unsafe && biome check --write"
  },
  "dependencies": {
    "@ait/ai-sdk": "workspace:*",
    "@ait/connectors": "workspace:*",
    "@ait/core": "workspace:*",
    "@ait/store": "workspace:*",
    "@fastify/cors": "^10.0.1",
    "@fastify/secure-session": "^8.2.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.1",
    "ioredis": "^5.8.0",
    "pino-pretty": "^13.1.2"
  },
  "devDependencies": {
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
