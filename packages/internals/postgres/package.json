{
  "name": "@ait/postgres",
  "version": "1.0.0",
  "description": "AIt's internal postgres database client and utils",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "lint": "biome format && biome lint",
    "lint:fix": "biome format --write && biome lint --write --unsafe",
    "test": "glob src/**/*.test.ts -c 'c8 tsx --require ./test-setup.ts --test'",
    "test:watch": "glob src/**/*.test.ts -c 'c8 tsx --require ./test-setup.ts --test --watch'",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "npx tsx src/db.migrate.ts",
    "db:studio": "drizzle-kit studio"
  },
  "keywords": [],
  "author": "@mateonunez <mateonunez95@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.3",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.3",
    "@types/sinon": "^17.0.3",
    "drizzle-kit": "^0.30.1",
    "sinon": "^19.0.2",
    "typescript": "^5.7.2"
  }
}
