{
  "name": "@ait/postgres",
  "version": "1.0.0",
  "description": "AIt's internal postgres database client and utils",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsc -p ./tsconfig.build.json --watch",
    "build": "tsc -p ./tsconfig.build.json",
    "prepare": "pnpm build",
    "clean": "rm -rf dist coverage",
    "lint": "biome format && biome lint",
    "lint:fix": "biome format --write && biome lint --write --unsafe",
    "copy:env": "test -f .env || cp .env.example .env",
    "copy:env:test": "test -f .env.test || cp .env.example .env.test",
    "db:generate": "drizzle-kit generate --config src/drizzle.config.ts",
    "db:migrate": "pnpm copy:env && tsx src/db.migrate.ts",
    "db:fix-collation": "pnpm copy:env && tsx src/db.fix-collation.ts",
    "db:generate:test": "pnpm copy:env:test && NODE_ENV=test drizzle-kit generate --config src/drizzle.config.ts",
    "db:migrate:test": "pnpm copy:env:test && NODE_ENV=test tsx src/db.migrate.ts",
    "db:studio": "drizzle-kit studio --config ./src/drizzle.config.ts"
  },
  "keywords": [],
  "author": "@mateonunez <mateonunez95@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@ait/core": "workspace:*",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.3",
    "@types/sinon": "^17.0.4",
    "drizzle-kit": "^0.31.6",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
