{
  "name": "@ait/ait",
  "version": "1.0.0",
  "description": "Hey there! I'm AIt.",
  "author": "@mateonunez <mateonunez95@gmail.com>",
  "scripts": {
    "dev": "pnpm run:recursive --parallel dev",
    "build": "pnpm run:recursive build",
    "typecheck": "pnpm run:recursive typecheck",
    "start": "pnpm run:recursive start",
    "test": "pnpm run:recursive test",
    "test:watch": "pnpm run:recursive --parallel test:watch",
    "lint": "pnpm run:recursive lint",
    "lint:fix": "pnpm run:recursive lint:fix",
    "prepare": "husky",
    "pretest": "pnpm start:services:test && pnpm run --filter @ait/postgres db:migrate:test",
    "posttest": "pnpm stop:services:test",
    "migrate": "pnpm run --filter @ait/postgres db:migrate",
    "clean": "pnpm run:recursive clean && rm -rf node_modules/.cache",
    "clean:services": "docker compose down -v --remove-orphans",
    "clean:services:test": "docker compose -f docker-compose.test.yml down -v --remove-orphans",
    "clean:all": "pnpm clean && pnpm clean:services && pnpm clean:services:test",
    "run:recursive": "pnpm -r --workspace-concurrency=1 --if-present",
    "start:services": "docker compose up -d",
    "generate:openapi": "pnpm --filter @ait/connectors run generate:openapi",
    "start:services:test": "docker compose -f docker-compose.test.yml up -d --wait",
    "stop:services": "docker compose down",
    "stop:services:test": "docker compose -f docker-compose.test.yml down"
  },
  "keywords": [],
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^24.8.0",
    "c8": "^10.1.3",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "tsc": "^2.0.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.23.0+sha512.21c4e5698002ade97e4efe8b8b4a89a8de3c85a37919f957e7a0f30f38fbc5bbdd05980ffe29179b2fb6e6e691242e098d945d1601772cad0fef5fb6411e2a4b"
}
